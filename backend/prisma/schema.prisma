generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  firstname   String
  lastname    String?
  email       String    @unique
  password    String

  account     Account[]
}


model Account {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String    
  balance     Int
  tt_credit   Int
  tt_debit    Int
  // pin         Int
}


model Transaction {
  id          String      @id @default(uuid())
  from_id     String
  from_name   String
  to_id       String
  to_name     String
  amount      Int
  date        String
}